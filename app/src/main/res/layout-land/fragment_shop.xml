<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.Shop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange">

        <ScrollView
            android:layout_width="409dp"
            android:layout_height="430dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.468">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scaleType="center">

                <ImageView
                    android:id="@+id/pinkBalon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/pinkbalon" />

                <Button
                    android:id="@+id/pinkbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"

                    android:text="Buy" />

                <ImageView
                    android:id="@+id/yellowBalon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/yellowbalon" />

                <Button
                    android:id="@+id/yellowbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:text="Buy" />

                <ImageView
                    android:id="@+id/starBalon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/starbalon" />

                <Button
                    android:id="@+id/starbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:text="BUY" />

                <ImageView
                    android:id="@+id/spiralBalon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/spiralebalon" />

                <Button
                    android:id="@+id/spiralbuton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:text="BUY" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </layout>